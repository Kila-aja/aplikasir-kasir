<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Stok Produk</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('layout/sidebar') %>

    <div class="content-container">
        <h2>Daftar Stok Produk</h2>
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama Produk</th>
                    <th>Harga</th>
                    <th>Stok</th>
                </tr>
            </thead>
            <tbody>
                <% produkList.forEach((produk, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= produk.nama %></td>
                        <td><%= produk.harga %></td>
                        <td><%= produk.stok %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
